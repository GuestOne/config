macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/account.theguestone@gmail.com<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/account.xxxxxxxxxxxxx@gmail.com<enter><change-folder>!<enter>'



folder-hook 'theguestone@gmail.com' 'source ~/.mutt/account.theguestone@gmail.com'
folder-hook 'xxxxxxxxxxx@gmail.com' 'source ~/.mutt/account.xxxxxxxxxxxxxx@gmail.com'
# switch to default account on startup
source ~/.mutt/account.theguestone@gmail.com



set spoolfile = "imaps://imap.gmail.com/INBOX"
set ssl_starttls=yes
set ssl_force_tls=yes
set editor=xfw
set folder = "imaps://imap.gmail.com:993"
set imap_check_subscribed
set hostname = gmail.com
unset imap_passive
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates
set move = no
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop

set send_charset="utf-8"
set assumed_charset="iso-8859-1"

auto_view application/msword
auto_view application/pdf





## Colours for items in the index                                                                                                                                         
color index brightcyan black ~N
color index brightred black ~O
color index brightyellow black ~F
color index black green ~T
color index brightred black ~D
mono index bold ~N
mono index bold ~F
mono index bold ~T
mono index bold ~D

## Highlights inside the body of a message.                                                                                                                               

## URLs                                                                                                                                                                    
color body brightgreen black "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
color body brightgreen black "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
mono body bold "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
mono body bold "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"

## Email addresses.                                                                                                                                                       
color body brightgreen black "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

